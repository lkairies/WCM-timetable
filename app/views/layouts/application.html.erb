<!DOCTYPE html>
<html>
<head>
  <title>WCMTimetable</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
       <div class="container-fluid">
          <ul class="nav navbar-nav">
             <li><%= link_to("Module", moduls_path( :semester => params[:semester])) %></li>
             <li>
               <%= form_tag("/wochenplan", method:"get", :id => 'wochenplan_form', :class => "navbar-form navbar-left") do %>
                   <%= hidden_field_tag(:semester, @selected_sem) %>
                   <%= hidden_field_tag(:lvs) %>
                   <%= submit_tag("Wochenplan", :class => "btn btn-default") %>
               <% end %>
             </li>
         </ul>
       </div>
   </nav>
  <div class="container">
    <div class="row">
      <%= yield %>
    </div>
  </div>
</body>
</html>
