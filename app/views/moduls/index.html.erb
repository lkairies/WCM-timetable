    <td><%= modul_nummer %></td>
    <td />
    <td />
   <% end %>
   <td><ul>
    <% @modul_lvs[modul_nummer].each do |lv_titel, lv_id| %>
     <%= content_tag :li, :data => {lvid: lv_id } do -%>
      <%= lv_titel %>
     <% end -%>
    <% end %>
   </ul></td>
  </tr>
 <% end %>
 </tbody>
